<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_activity_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_view_todo_activity_main"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="test"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_view_todo_activity_main"
        android:textDirection="inherit"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/title_view_todo_activity_main"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_view_todo_activity_main"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/description_view_todo_activity_main"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repeat_view_todo_activity_main"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/date_view_todo_activity_main"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_box_multiSelect_remove"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>